<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".ServiceProviders.RegisterServiceProvider">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideInset">
        <LinearLayout

            android:id="@+id/linear_login_tausi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:theme="@style/AppTheme"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/appname"
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:src="@drawable/tsplash" />

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                app:mtf_cardCollapsedHeight="1dp"

                app:mtf_labelColor="@android:color/black"
                app:mtf_image="@drawable/ic_email">

                <EditText
                    android:id="@+id/service_provider_register_email_input"
                    android:layout_width="246dp"
                    android:layout_height="wrap_content"
                    android:hint="Email Address"
                    android:textColor="@color/Black"
                    android:textSize="14sp" />

            </com.github.florent37.materialtextfield.MaterialTextField>

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="320dp"
                app:mtf_cardCollapsedHeight="1dp"
                android:layout_marginTop="1dp"
                android:layout_height="wrap_content"
                app:mtf_labelColor="@android:color/black"
                app:mtf_image="@drawable/password"
                android:layout_marginBottom="1dp">

                <EditText
                    android:id="@+id/service_provider_register_password_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="@color/Black"
                    android:textSize="14sp" />

            </com.github.florent37.materialtextfield.MaterialTextField>
            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="320dp"
                app:mtf_cardCollapsedHeight="1dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                app:mtf_labelColor="@android:color/black"
                app:mtf_image="@drawable/password"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/service_provider_confirm_password_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    android:textColor="@color/Black"
                    android:textSize="14sp"
                    android:inputType="textPassword"/>

            </com.github.florent37.materialtextfield.MaterialTextField>




            <LinearLayout
                android:id="@+id/linear_home_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/register_service_provider_btn"
                    android:text="Sign Up "
                    android:paddingLeft="20dp"
                    android:textAllCaps="false"
                    android:paddingRight="20dp"
                    android:background="@drawable/custom_two_button"
                    android:textColor="@android:color/white"
                    />



            </LinearLayout>






        </LinearLayout>



    </ScrollView>
</RelativeLayout>