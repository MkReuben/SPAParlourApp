<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Orange"
    tools:context=".ServiceProviders.SpMombasaServices.ClickPost.SpClickPostBraidingMombasa">




    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:id="@+id/maintain_service_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/imageadd"
                android:layout_marginTop="10dp"

                />


            <TextView
                android:id="@+id/maintain_service_name"
                android:layout_below="@id/maintain_service_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Service Name..."
                android:background="@drawable/input_design"
                android:gravity="start"
                android:padding="15dp"
                android:textColor="@color/Black"
                android:textSize="16sp"
                android:layout_marginTop="17dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/maintain_service_phone_number"
                android:layout_below="@id/maintain_service_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Service Phone Number.."
                android:gravity="start"
                android:textSize="16sp"
                android:textColor="@color/Black"
                android:padding="15dp"
                android:background="@drawable/input_design"
                android:layout_marginTop="17dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />



            <LinearLayout
                android:id="@id/linear_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginRight="70dp"
                android:layout_marginLeft="70dp"
                android:layout_below="@id/maintain_service_phone_number"
                android:layout_marginTop="100dp"
                android:orientation="horizontal">


                <Button

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/maintain_post"
                    android:text="Edit Service"
                    android:padding="14dp"
                    android:textSize="14sp"
                    android:background="@drawable/custom_two_button"
                    android:textColor="@android:color/white"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginRight="70dp"
                android:layout_marginLeft="70dp"
                android:layout_below="@id/linear_one"
                android:layout_marginTop="17dp"
                android:orientation="horizontal">


                <Button

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/maintain_delete"
                    android:text="Delete Service"
                    android:padding="14dp"
                    android:textSize="14sp"
                    android:background="@drawable/custom_two_button"
                    android:textColor="@android:color/white"
                    />

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>